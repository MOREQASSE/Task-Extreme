{
  "name": "TaskExtreme",
  "short_name": "TaskExtreme",
  "description": "A powerful task management application with offline capabilities",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#ffffff",
  "theme_color": "#4a90e2",
  "icons": [
    {
      "src": "/images/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1280x800",
      "type": "image/png",
      "platform": "wide",
      "label": "TaskExtreme Desktop View"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "375x667",
      "type": "image/png",
      "platform": "narrow",
      "label": "TaskExtreme Mobile View"
    }
  ],
  "categories": ["productivity", "utilities", "business"],
  "shortcuts": [
    {
      "name": "Add New Task",
      "short_name": "New Task",
      "description": "Create a new task quickly",
      "url": "/#/new-task",
      "icons": [{ "src": "/images/icon-add.png", "sizes": "192x192" }]
    },
    {
      "name": "View Today's Tasks",
      "short_name": "Today",
      "description": "View tasks due today",
      "url": "/#/today"
    },
    {
      "name": "View All Tasks",
      "short_name": "All Tasks",
      "description": "View all your tasks",
      "url": "/#/tasks"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "scope": "/",
  "id": "/?homescreen=1",
  "dir": "ltr",
  "lang": "en-US",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "file_handlers": [
    {
      "action": "/open-csv",
      "accept": {
        "text/csv": [".csv"]
      },
      "icons": [
        {
          "src": "/images/csv-icon.png",
          "sizes": "32x32"
        }
      ],
      "name": "CSV Files"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["auto", "navigate-new", "existing"]
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "protocol_handlers": [
    {
      "protocol": "web+taskextreme",
      "url": "/open-link?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "widgets": [
    {
      "name": "TaskExtreme Widget",
      "short_name": "Tasks",
      "description": "Quickly add and view your tasks",
      "tag": "task-widget",
      "template": "task-widget-template",
      "ms_ac_initial_size": [2, 2],
      "ms_ac_initial_size_medium": [2, 2],
      "ms_ac_initial_size_wide": [2, 4],
      "screenshots": [
        {
          "src": "/screenshots/widget.png",
          "sizes": "300x300",
          "type": "image/png",
          "label": "Task Widget"
        }
      ]
    }
  ],
  "splash_pages": null
}
